<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="pdm.ivchecker.Juego"
    android:orientation="vertical"
    android:weightSum="1">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="points"
            android:id="@+id/viewPuntos"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true">



            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:id="@+id/vida3"
                android:layout_gravity="bottom"
                android:src="@drawable/corazonvivo" />

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:id="@+id/vida2"
                android:layout_gravity="bottom"
                android:src="@drawable/corazonvivo" />

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:id="@+id/vida1"
                android:layout_gravity="bottom"
                android:src="@drawable/corazonvivo" />
        </LinearLayout>

    </RelativeLayout>

    <TextView
        android:id="@+id/infinitivo"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textSize="20px"
        android:text="infinitivo"
        android:layout_x="82dp"
        android:layout_y="4dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="31dp"
        android:gravity="center" />

    <TextView
        android:id="@+id/pasado"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textSize="20px"
        android:text="pasado"
        android:layout_x="85dp"
        android:layout_y="52dp"
        android:layout_marginTop="32dp"
        android:layout_below="@+id/participio"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:gravity="center" />

    <TextView
        android:id="@+id/participio"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textSize="20px"
        android:text="participio"
        android:layout_x="66dp"
        android:layout_y="97dp"
        android:layout_marginTop="26dp"
        android:layout_below="@+id/infinitivo"
        android:layout_alignRight="@+id/infinitivo"
        android:layout_alignEnd="@+id/infinitivo"
        android:gravity="center" />

    <LinearLayout
        android:id="@+id/LinearLayoutA"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="1"
        android:background="#ff31c1ff">

        <EditText
            android:id="@+id/formaMisteriosaA"
            android:layout_width="245dp"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:layout_x="22dp"
            android:layout_y="142dp"
            android:layout_above="@+id/nextButton"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/LinearLayoutB"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:background="#ff30ffad">

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/formaMisteriosaB"
            android:layout_weight="0.70" />
    </LinearLayout>

    <Button
        android:id="@+id/nextButton"
        android:text="Next"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_x="104dp"
        android:layout_y="236dp"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/infinitivo"
        android:layout_toEndOf="@+id/infinitivo"
        android:gravity="center"
        android:layout_gravity="center_horizontal" />


</LinearLayout>
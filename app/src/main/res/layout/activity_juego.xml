<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="pdm.ivchecker.Juego">


    <TextView
        android:id="@+id/infinitivo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20px"
        android:text="infinitivo"
        android:layout_x="82dp"
        android:layout_y="4dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="31dp" />

    <TextView
        android:id="@+id/pasado"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20px"
        android:text="pasado"
        android:layout_x="85dp"
        android:layout_y="52dp"
        android:layout_marginTop="32dp"
        android:layout_below="@+id/participio"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/participio"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20px"
        android:text="participio"
        android:layout_x="66dp"
        android:layout_y="97dp"
        android:layout_marginTop="26dp"
        android:layout_below="@+id/infinitivo"
        android:layout_alignRight="@+id/infinitivo"
        android:layout_alignEnd="@+id/infinitivo" />

    <EditText
        android:id="@+id/formaMisteriosa"
        android:layout_width="260dp"
        android:layout_height="wrap_content"
        android:inputType="text"
        android:layout_x="22dp"
        android:layout_y="142dp"
        android:layout_above="@+id/nextButton"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:id="@+id/nextButton"
        android:text="Next"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_x="104dp"
        android:layout_y="236dp"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/infinitivo"
        android:layout_toEndOf="@+id/infinitivo" />



</RelativeLayout>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="fill_parent"
    android:layout_width="fill_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:baselineAligned="false">

    <TextView
        android:id="@+id/infinitivoTraining"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:textSize="20px"
        android:text="infinitivo"
        android:layout_weight="4"
        android:gravity="center"/>

    <TextView
        android:id="@+id/pasadoTraining"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:textSize="20px"
        android:text="pasado"
        android:layout_weight="4"
        android:gravity="center" />

    <TextView
        android:id="@+id/participioTraining"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:textSize="20px"
        android:text="participio"
        android:layout_weight="4"
        android:gravity="center" />

    <EditText
        android:id="@+id/formaMisteriosaTraining"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:inputType="text"
        android:layout_weight="4"
        android:gravity="center" />
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_weight="4">
        <TextView
            android:id="@+id/etiqueta_progreso"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:gravity="center"
            android:layout_weight="2"/>
        <Button
            android:id="@+id/nextButtonTraining"
            android:text="Next"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_toRightOf="@+id/infinitivo"
            android:layout_weight="1"
            android:gravity="center"/>
    </LinearLayout>
</LinearLayout>
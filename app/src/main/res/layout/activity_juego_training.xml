<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="fill_parent"
    android:layout_width="fill_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:baselineAligned="false"
    android:background="#ff8b85a2">

    <TextView
        android:id="@+id/infinitivoTraining"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:textSize="40px"
        android:text="infinitivo"
        android:layout_weight="4"
        android:gravity="center"
        android:textColor="#fffcfffd" />

    <TextView
        android:id="@+id/pasadoTraining"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:textSize="40px"
        android:text="pasado"
        android:layout_weight="4"
        android:gravity="center"
        android:textColor="#ffffffff" />

    <TextView
        android:id="@+id/participioTraining"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:textSize="40px"
        android:text="participio"
        android:layout_weight="4"
        android:gravity="center"
        android:textColor="#ffffffff" />

    <EditText
        android:id="@+id/formaMisteriosaTraining"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:inputType="text"
        android:layout_weight="4"
        android:gravity="center" />
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="fill_parent"
        android:layout_height="81dp">
        <TextView
            android:id="@+id/etiqueta_progreso"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:gravity="center"
            android:layout_weight="2"
            android:textSize="30dp"
            android:text="1/17"
            android:textColor="#ffffffff" />
        <Button
            android:id="@+id/nextButtonTraining"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_toRightOf="@+id/infinitivo"
            android:layout_weight="1"
            android:gravity="center"
            android:background="@drawable/playtrainning" />
    </LinearLayout>
</LinearLayout>
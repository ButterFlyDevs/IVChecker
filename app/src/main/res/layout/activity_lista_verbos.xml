


        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools" android:layout_width="fill_parent"
            android:layout_height="fill_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:paddingTop="@dimen/activity_vertical_margin"
            android:paddingBottom="@dimen/activity_vertical_margin" tools:context="pdm.ivchecker.ELIMINAME"
            android:orientation="vertical"
            android:weightSum="1"
            android:background="@color/colorfondo">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:weightSum="1">

                <TextView
                    android:layout_width="130dp"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="Large Text"
                    android:id="@+id/textNombreLista"
                    android:gravity="center"
                    android:textColor="#ffececec"
                    android:textStyle="bold" />

                <Button
                    android:layout_width="60dp"
                    android:layout_height="50dp"
                    android:id="@+id/botonSoft"
                    android:background="@drawable/soft"
                    android:enabled="true" />

                <Button
                    android:layout_width="60dp"
                    android:layout_height="50dp"
                    android:id="@+id/botonMedium"
                    android:background="@drawable/medium"
                    android:enabled="true"
                    android:layout_marginLeft="5dp" />

                <Button
                    android:layout_width="60dp"
                    android:layout_height="50dp"
                    android:id="@+id/botonHard"
                    android:background="@drawable/hard"
                    android:enabled="true"
                    android:layout_marginLeft="5dp" />
            </LinearLayout>

            <ScrollView
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:id="@+id/scrollView3"
                android:layout_marginTop="20dp">

                <TableLayout
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_marginTop="30dp"
                    android:id="@+id/tablaVerbos"
                    android:layout_gravity="center_horizontal"
                    android:gravity="left">

                    <TableRow
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:layout_gravity="left"
                        android:gravity="left">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textAppearance="?android:attr/textAppearanceSmall"
                            android:text="n"
                            android:id="@+id/textNumero"
                            android:layout_column="0"
                            android:textColor="#ffececec"
                            android:textSize="25dp"
                            android:layout_gravity="left" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textAppearance="?android:attr/textAppearanceSmall"
                            android:text="infinitivo"
                            android:id="@+id/textInfinitivo"
                            android:layout_column="1"
                            android:layout_marginLeft="20dp"
                            android:textColor="#ffececec"
                            android:textSize="25dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textAppearance="?android:attr/textAppearanceSmall"
                            android:text="pasado"
                            android:id="@+id/textPasado"
                            android:layout_column="2"
                            android:layout_marginLeft="20dp"
                            android:textColor="#ffffffff" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textAppearance="?android:attr/textAppearanceSmall"
                            android:text="participio"
                            android:id="@+id/textParticipio"
                            android:layout_column="3"
                            android:layout_marginLeft="20dp"
                            android:textColor="#ffffffff" />
                    </TableRow>
                </TableLayout>
            </ScrollView>

        </LinearLayout>

